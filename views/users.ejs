<!DOCTYPE html>
<html>
<head>
  <title>Users (Database)</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <h2>Users from SQLite</h2>

  <h3>Add user</h3>

  <p><a href="/">Home</a> | <a href="/admin">Admin</a></p>
  <form method="POST" action="/users">
    <input name="name" placeholder="name" required />
    <input name="pass" placeholder="pass" required />
    <button type="submit">Add</button>
  </form>

  <hr />

  <% if (users.length === 0) { %>
    <p>No users in database yet.</p>
  <% } else { %>
    <table border="1" cellpadding="6">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% users.forEach(u => { %>
        <tr>
          <td><%= u.user_id %></td>
          <td><%= u.name %></td>
          <td><%= u.pass %></td>
          <td>
            <a href="/users/<%= u.user_id %>/edit">Edit</a>
            <form method="POST" action="/users/<%= u.user_id %>/delete" style="display:inline">
              <button type="submit" onclick="return confirm('Delete this user?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  <% } %>
</body>
</html>
