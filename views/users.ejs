<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users (Database)</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/users.css' />
</head>
<body>

    <nav class="main-menu">
        <div>
            <div class="nav-text">D&D Dating</div>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/admin">Admin</a></li>
                <li><a href="/users">Users</a></li>
            </ul>
        </div>
        <div class="logout">
          <% if (locals.user) { %>
            <form method="POST" action="/logout">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit">Logout (<%= locals.user.name %>)</button>
            </form>
          <% } else { %>
            <a href="/login" class="button">Login</a>
            <a href="/register" class="button">Register</a>
          <% } %>
        </div>
    </nav>

    <div class="content">
        <h2>Users from SQLite</h2>

        <a href="/" class="back-link">‚Üê Back to Home</a>

        <div class="users-container">
            <h3>Add user</h3>
            <form method="POST" action="/users">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <input name="name" placeholder="Name" required />
                </div>
                <div class="form-group">
                    <input name="pass" placeholder="Password" required />
                </div>
                <button type="submit">Add</button>
            </form>

            <hr />

            <% if (users.length === 0) { %>
                <p class="empty-message">No users in database yet.</p>
            <% } else { %>
                <table class="users-table">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Password</th>
                        <th>Actions</th>
                    </tr>
                    <% users.forEach(u => { %>
                        <tr>
                            <td><%= u.user_id %></td>
                            <td><%= u.name %></td>
                            <td><%= u.pass %></td>
                            <td class="actions-cell">
                                <a href="/users/<%= u.user_id %>/edit">Edit</a>
                                <form method="POST" action="/users/<%= u.user_id %>/delete" style="display:inline">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" onclick="return confirm('Delete this user?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </table>
            <% } %>
        </div>
    </div>
</body>
</html>
